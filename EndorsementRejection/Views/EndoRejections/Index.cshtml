@model IEnumerable<EndorsementRejection.Models.Entities.EndoRejection>

@{
    ViewData["Title"] = "Index";
}

@* <h1>Index</h1> *@
<h4 class="text-center">Request List</h4>

@* <h5>Search By PolicyNo</h5> *@
<p>
    @using (Html.BeginForm("Index", "EndoRejections", FormMethod.Post))
    {
        @*@Html.ActionLink("Create New Vendor", "Create")*@
        <div> @TempData["Message"]</div>
        <div>

            <b> PolicyNo: </b>
            @Html.TextBox("PolicyNo", (object)ViewBag.PolicyNo)

            <input type="submit" id="Search" value="Search" name="Search" />
            <input type="submit" id="btnClear" value="Clear" name="Clear" />

        </div>
    }
</p>
<p>
    <a asp-action="Create" class="align-content-sm-end">Create New</a>
</p>
<div class="datatable-container">

    <table class="table table-sm table-responsive table-striped table-bordered table-hover zero-configuration" id="tbllist">

       @* <table class="table"> *@
        <thead class="table-dark">
            <tr>
                <th class="text-center  text-wrap">
                    @Html.Label("Requested By")
                </th>
                <th>
                    @Html.Label("Policy#")
                </th>
                <th>
                    @Html.Label("Policy Holder")
                   
                </th>
                <th>
                    @Html.Label("Req Date")

                    @* @Html.DisplayNameFor(model => model.RequestedDate) *@
                </th>
                <th>
                    @Html.Label("Processed Type")

                    @* @Html.DisplayNameFor(model => model.ProcessedType) *@
                </th>
                <th>
                    @Html.Label("Approval Status")

                    @* @Html.DisplayNameFor(model => model.ApprovalStatus) *@
                </th>
                <th>
                    @Html.Label("Approved By")

                    @* @Html.DisplayNameFor(model => model.ApprovedBy) *@
                </th>
                
                <th>
                    @Html.Label("Approved Date")

                    @* @Html.DisplayNameFor(model => model.ApprovedDate) *@
                </th>
                @* <th>
                    @Html.Label("Approval Comments")

                    @* @Html.DisplayNameFor(model => model.ApprovalComments) 
                </th> *@
                <th>
                    @Html.Label("completed By")

                    @* @Html.DisplayNameFor(model => model.completedBy) *@
                </th>
                <th>
                    @Html.Label("completed Date")

                    @* @Html.DisplayNameFor(model => model.completedDate) *@
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PolicyNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PolicyHolder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProcessedType)
                    </td>
@*                     <td>
                        @Html.DisplayFor(modelItem => item.RejectionReason)
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovalStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovedBy)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovedDate)
                    </td>
@*                     <td>
                        @Html.DisplayFor(modelItem => item.ApprovalComments)
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.completedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.completedDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @* |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
